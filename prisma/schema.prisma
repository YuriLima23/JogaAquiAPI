// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id            String            @id 
  name          String
  email         String?         @unique
  cpf           String?         @unique
  photo         String?
  phone         String?         @unique
  password      String
  token_auth    String?
  createdAt     DateTime       @default(now())
  updateAt      DateTime       @updatedAt
  // relation with Support 1:N
  supports      Support[]
  wallet        Wallet?
  solicitations Solicitation[]

}

model Support {
  id               Int      @id @default(autoincrement())
  message          String
  // apareceça apena o campo user no Banco mas necessita dessas duas colunas para criar a relação
  user             User     @relation(fields: [user_id], references: [id], onDelete: Cascade)
  user_id          String
  message_response String?
  subject          String
  createdAt        DateTime @default(now())
  updateAt         DateTime @updatedAt
}

model Wallet {
  id               Int      @id @default(autoincrement())
  balance          Float
  previous_balance Float?
  user             User     @relation(fields: [user_id], references: [id], onDelete: Cascade, onUpdate: Cascade)
  user_id          String      @unique
  createdAt        DateTime @default(now())
  updateAt         DateTime @updatedAt
}

model Type_Recicle {
  id            Int                         @id @default(autoincrement())
  price         String
  color          String?
  name          String
  solicitations Solicitation[]
  createdAt     DateTime                    @default(now())
  updateAt      DateTime                    @updatedAt


}



model Solicitation {
  id                  Int                         @id @default(autoincrement())
  total               Float?                      @default(0.00)
  status              String
  weight              Float?                      @default(0.00)
  reason_refusal      String?
  date_of_collect     DateTime
  latitude            Float
  longitude           Float
  address             String                      @default("")
  user                User                        @relation(fields: [user_id], references: [id])
  user_id             String
  types_recicles        Type_Recicle[]
  cobrado             Boolean                     @default(false)
  createdAt           DateTime                    @default(now())
  updateAt            DateTime                    @updatedAt
}


